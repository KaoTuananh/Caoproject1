class Customer:

    def __init__(self, customer_id: int, name: str, adress: str, phone: str, contact_person: str):
       
        self.__customer_id = customer_id
        self.__name = name
        self.__adress = adress
        self.__phone = phone
        self.__contact_person = contact_person

    # --- Геттеры  ---

    def get_customer_id(self) -> int:
        return self.__customer_id

    def get_name(self) -> str:
        return self.__name

    def get_adress(self) -> str:
        return self.__adress

    def get_phone(self) -> str:
        return self.__phone

    def get_contact_person(self) -> str:
        return self.__contact_person

    # --- Сеттеры  ---

    def set_customer_id(self, customer_id: int):
        self.__customer_id = customer_id

    def set_name(self, name: str):
        self.__name = name

    def set_adress(self, adress: str):
        self.__adress = adress

    def set_phone(self, phone: str):
        self.__phone = phone

    def set_contact_person(self, contact_person: str):
        self.__contact_person = contact_person
